<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" style="-fx-background-image: url(images/fondo.jpg);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Cambio_de_Password_AdminController">
   <children>
      <Label alignment="CENTER" prefWidth="400.0" text="CAMBIO DE PASSWORD" textFill="WHITE">
         <font>
            <Font name="Georgia Bold" size="16.0" />
         </font>
         <padding>
            <Insets top="10.0" />
         </padding>
      </Label>
      <VBox layoutX="100.0" layoutY="29.0" prefHeight="201.0" prefWidth="200.0">
         <children>
            <Label alignment="CENTER" prefWidth="400.0" text="Cambio de Password" textFill="WHITE">
               <font>
                  <Font name="Garamond Bold" size="16.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <PasswordField fx:id="txt_cambioPassword" translateY="10.0" />
            <Label alignment="CENTER" prefWidth="400.0" text="Confirmar Password" textFill="WHITE" translateY="20.0">
               <font>
                  <Font name="Garamond Bold" size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="txt_confirmarPassword" translateY="30.0" />
            <Button fx:id="btn_restaurarPassword" mnemonicParsing="false" onAction="#Restaurar_Password" style="-fx-background-radius: 5px; -fx-border-radius: 5px;" text="Restaurar Password" translateX="22.0" translateY="50.0">
               <font>
                  <Font name="Garamond Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
